#include <iostream>
using namespace std;
//feature version
int main() {
    double num1, num2;
    char op;

    cout << "===== BASIC CALCULATOR =====" << endl;
    cout << "Enter first number: ";
    cin >> num1;

    cout << "Enter operator (+, -, *, /, %): ";
    cin >> op;

    cout << "Enter second number: ";
    cin >> num2;

    cout << "Result: ";

    switch(op) {
        case '+':
            cout << num1 + num2;
            break;

        case '-':
            cout << num1 - num2;
            break;

        case '*':
            cout << num1 * num2;
            break;

        case '/':
            if(num2 != 0)
                cout << num1 / num2;
            else
                cout << "Error! Division by zero.";
            break;

        case '%':
            // Modulus works only with integers
            cout << (int)num1 % (int)num2;
            break;

        default:
            cout << "Invalid operator!";
    }

    cout << endl;
    return 0;
}
